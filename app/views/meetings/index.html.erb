<h1>Listing meetings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Trashed</th>
      <th>Template</th>
      <th>Draft</th>
      <th>Archived</th>
      <th>Completed</th>
      <th>Privacy</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>All day</th>
      <th>Creator</th>
      <th>Account</th>
      <th>Location</th>
      <th>Location comments</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.description %></td>
        <td><%= meeting.trashed %></td>
        <td><%= meeting.template %></td>
        <td><%= meeting.draft %></td>
        <td><%= meeting.archived %></td>
        <td><%= meeting.completed %></td>
        <td><%= meeting.privacy %></td>
        <td><%= meeting.starts_at %></td>
        <td><%= meeting.ends_at %></td>
        <td><%= meeting.all_day %></td>
        <td><%= meeting.creator_id %></td>
        <td><%= meeting.account_id %></td>
        <td><%= meeting.location_id %></td>
        <td><%= meeting.location_comments %></td>
        <td><%= meeting.color %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

